extends layout

script(src='/public/javascripts/filterpage.js')
block content
	script(src="http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.js")
	link(rel='stylesheet', href='http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.css')
	div#filterview
		form
			div#checklist
				each val in ['Professional', 'Collegiate', 'High School', 'Outdoors', 'Indoors', 'Morning', 'Afternoon', 'Evening', 'Night', 'Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday']
						input(type='checkbox', checked, id=val)
						label(for=val) #{val}
						br
						br
			br
			button(type='button') Save Filter